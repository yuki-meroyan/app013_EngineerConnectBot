= form_with(model: user_detail, local: true) do |f|
  .form__content
    = f.label :family_name, class: "form__label" do
      氏
    = f.text_field :family_name, class: "form__box", placeholder: '（例）山田'
  .form__content
    = f.label :first_name, class: "form__label" do
      名
    = f.text_field :first_name, class: "form__box", placeholder: '（例）太郎'
  .form__content
    = f.label :address, class: "form__label" do
      住所
    = f.collection_select :address, Prefecture.all, :name, :name, {}, class: "form__box"
  .form__content
    = f.label :level, class: "form__label" do
      レベル
    = f.select :level, ["初級者","中級者","上級者"], {}, {class: "form__box"}
  .form__content
    = f.label :language, class: "form__label" do
      言語
    = f.text_field :language, class: "form__box", placeholder: '（例）HTML CSS Ruby JavaScript'
  .form__content
    = f.label :detail, class: "form__label" do
      自己PR
    = f.text_area :detail, class: "form__box", placeholder: '（例）よろしくお願いします'
  .form__content
    = f.submit text, class: "form__button"