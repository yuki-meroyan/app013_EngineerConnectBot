= form_with(url: beginner_path, model: @beginner, method: :patch, local: true) do |f|
  = f.label :title do
    title
    = f.text_field :title
  = f.label :category do
    category
    = f.text_field :category
  = f.label :language do
    language
    = f.text_field :language
  = f.label :detail do
    detail
    = f.text_area :detail
  = f.submit "更新する",type: "submit"