.detail-content
  .detail-content__show
    %table
      %tr
        %th タイトル
        %td
          = @senior.title
      %tr
        %th 投稿者
        %td
          = link_to @senior.user.name, user_path(id: @senior.user.id), class: "article__category__content--link"
      %tr
        %th レベル
        %td 上級者
      %tr
        %th カテゴリー
        %td
          = @senior.category
      %tr
        %th 主な言語
        %td
          = @senior.language
      %tr
        %th 募集ステータス
        %td
          - if @senior.assing != nil
            締切
          - else
            募集中
      %tr
        %th 申込締切期限
        %td
          = @senior.entry_period.strftime("%Y-%m-%d")
      %tr
        %th 開発期間
        %td
          = @senior.work_period.strftime("%Y-%m-%d")
          迄
      %tr
        %th 報酬金額(目安)
        %td
          = @senior.price
      %tr
        %th 詳細
        %td
          = @senior.detail

.form
  = render 'comments/article_comment', { comments: @comments, comment: @comment, url: "/seniors/" + @senior.id.to_s + "/senior_comments" }