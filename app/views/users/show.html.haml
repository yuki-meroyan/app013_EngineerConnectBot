.form
  .form__contents
    %h2
      %span.follow-wrapper{id: "user_#{@user.id}"}
    .form__content
      = image_tag @user.image.url, class: "form__image"
    .form__content
      .form__label
        ニックネーム
      = @user.name
    .form__content
      .form__label
      = link_to "詳細を見る", user_detail_path(@user) if @user.user_detail.present?
    .form__content
      = render 'follow_form', user: @user if user_signed_in?

